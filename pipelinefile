pipeline {
agent any
tools {
  terraform 'terraform'
}
options { ansiColor('xterm') } 
 stages { 
   stage ('Checkout Repo') { 
     steps { 
       cleanWs()
       sh  'git clone https://github.com/rajasekaranksr/ansible_playbooks.git'
      }
      } 

stage ('ansible version') { 
  steps {
   sh '''
    ansible --version
   ''' 
    }
    }
    
  stage ('trigger the playbook') { 
  steps {
   sh '''
   ansible-playbook validate_backup_files_md5sum.yaml 
   ''' 
   }
   }
   
        post { 
        always { 
            cleanWs()
         }
        }
  }
}
