pipeline {
agent any
tools {
  terraform 'terraform'
}
options { ansiColor('xterm') } 
stages { 
   stage ('Checkout Repo') { 
     steps { 
       cleanWs()
       sh  'git clone https://github.com/rajasekaranksr/terraform-test.git'
      }
      } 

stage ('Terraform version') { 
  steps {
   sh '''
    terraform --version
   ''' 
    }
    }
    
  stage ('Terraform init') { 
  steps {
   sh '''
   cd terraform-test/
   terraform init
   ''' 
   }
   }
  stage ('Terraform plan') { 
  steps {
   sh '''
   cd terraform-test/
   terraform plan -out=tfplan.out
   terraform show -json tfplan.out
   ''' 
   }
   }
 }
 }
